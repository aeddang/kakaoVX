<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_shadow_reverse"
    >
    <SeekBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/page_player_progress_height"
        android:layout_gravity="bottom"
        android:thumb="@drawable/selecter_thumb"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:progressDrawable="@drawable/shape_player_progress" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/textTime"
            style="@style/font_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_white"
            tools:text ="@string/tool_number"
            android:text=""
            android:layout_marginTop="@dimen/margin_thin"
            android:layout_marginStart="@dimen/margin_heavy"
            android:textSize="@dimen/font_medium"
            android:layout_gravity="left"/>
        <TextView
            android:id="@+id/textDuration"
            style="@style/font_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_white"
            tools:text ="@string/tool_number"
            android:text=""
            android:textSize="@dimen/font_medium"
            android:layout_marginTop="@dimen/margin_thin"
            android:layout_marginEnd="@dimen/margin_heavy"
            android:layout_gravity="right"/>
        <TextView
            android:id="@+id/textTitle"
            style="@style/font_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_white"
            tools:text ="@string/tool_title"
            android:text=""
            android:layout_marginTop="@dimen/margin_thin"
            android:textSize="@dimen/font_medium"
            android:layout_gravity="center"/>
    </FrameLayout>

</LinearLayout>