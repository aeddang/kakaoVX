<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarThumbVertical="@null"
            android:scrollbarThumbHorizontal="@null"
            android:scrollbars="none">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_black80"
                    android:layout_marginTop="@dimen/page_exercise_info_bg_top"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/page_exercise_info_top"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_height="@dimen/page_exercise_line_height"
                            android:layout_width="match_parent"
                            android:background="@color/color_black"
                            android:layout_gravity="center_vertical"
                            app:layout_constraintTop_toBottomOf="@id/btnUpdate" />
                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="@dimen/page_exercise_thumb_width"
                            android:layout_height="@dimen/page_exercise_thumb_height"
                            android:src="@drawable/ic_content_no_image"
                            android:scaleType="fitXY"
                            android:layout_marginStart="@dimen/margin_heavy"
                            />
                        <Button
                            android:id="@+id/btnExercise"
                            style="@style/font_light"
                            android:layout_width="100dp"
                            android:layout_height="@dimen/page_exercise_line_height"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/page_exercise_info_start"
                            android:textSize="@dimen/font_regular"
                            android:textColor="@color/color_white"
                            android:text="@string/page_exercise_btn_play"
                            android:nextFocusLeft="@id/btnExercise"
                            android:nextFocusRight="@id/btnExercise"
                            android:nextFocusUp="@id/btnExercise"
                            android:background="@drawable/selecter_rect_black_white_border"
                            />
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_heavy"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title"
                            style="@style/font_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            tools:text ="@string/tool_title"
                            android:layout_marginStart="@dimen/page_exercise_info_start"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/font_black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_marginStart="@dimen/page_exercise_info_start"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    style="@style/font_black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:textColor="@color/color_gray"
                                    android:text="@string/page_exercise_sub_title1"
                                    android:textSize="@dimen/font_regular"
                                   />
                                <TextView
                                    android:id="@+id/textInfo1"
                                    style="@style/font_light"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:layout_marginTop="@dimen/margin_extra_thin"
                                    android:textColor="@color/color_white"
                                    tools:text ="@string/tool_title"
                                    android:textSize="@dimen/font_medium"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_heavy"
                                android:orientation="vertical">
                                <TextView
                                    style="@style/font_black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:textColor="@color/color_gray"
                                    android:text="@string/page_exercise_sub_title2"
                                    android:textSize="@dimen/font_regular"
                                    />
                                <TextView
                                    android:id="@+id/textInfo2"
                                    style="@style/font_light"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:layout_marginTop="@dimen/margin_extra_thin"
                                    android:textColor="@color/color_white"
                                    tools:text ="@string/tool_title"
                                    android:textSize="@dimen/font_medium"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_heavy"
                                android:orientation="vertical">
                                <TextView
                                    style="@style/font_black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:textColor="@color/color_gray"
                                    android:text="@string/page_exercise_sub_title3"
                                    android:textSize="@dimen/font_regular"
                                    />
                                <TextView
                                    android:id="@+id/textInfo3"
                                    style="@style/font_light"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:layout_marginTop="@dimen/margin_extra_thin"
                                    android:textColor="@color/color_white"
                                    tools:text ="@string/tool_title"
                                    android:textSize="@dimen/font_medium"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_heavy"
                                android:orientation="vertical">
                                <TextView
                                    style="@style/font_black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:textColor="@color/color_gray"
                                    android:text="@string/page_exercise_sub_title4"
                                    android:textSize="@dimen/font_regular"
                                    />
                                <TextView
                                    android:id="@+id/textInfo4"
                                    style="@style/font_light"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:textColor="@color/color_white"
                                    android:layout_marginTop="@dimen/margin_extra_thin"
                                    tools:text ="@string/tool_title"
                                    android:textSize="@dimen/font_medium"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/textInfo"
                            style="@style/font_light"
                            android:layout_marginStart="@dimen/page_exercise_info_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:textColor="@color/color_white"
                            tools:text ="@string/tool_sub_title"
                            android:textSize="@dimen/font_regular"
                            android:layout_marginTop="@dimen/margin_extra_light" />
                        <View
                            android:id="@+id/line"
                            android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_marginStart="@dimen/margin_heavy"
                            android:background="@color/color_gray_deep"
                            app:layout_constraintTop_toBottomOf="@id/btnUpdate" />

                    </LinearLayout>
                    <FrameLayout
                        android:id="@+id/listArea"
                        android:layout_marginBottom="@dimen/margin_heavy"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/page_exercise_list_height">
                    </FrameLayout>
                </LinearLayout>



            </FrameLayout>
    </ScrollView>
</FrameLayout>